{
  "name": "Node.js & TypeScript",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
  "features": {
    "ghcr.io/devcontainers-contrib/features/angular-cli:2": {},
    "ghcr.io/dhoeric/features/opa:1": {}
  },
  "forwardPorts": [
    4200
  ],
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "Angular.ng-template"
      ]
    }
  }
}
